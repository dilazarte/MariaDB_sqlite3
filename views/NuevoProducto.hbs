<div class="container mt-5 mb-5">
    <h1 class="text-center">Chat online</h1><br>
    <form class="mb-5" onsubmit="sendMensaje(this)">
            <div class="mb-3">
                <label for="mail" class="form-label">Mail</label>
                <input type="email" id="mail" class="form-control" placeholder="tu@mail.com" required onkeyup="isEmpty()">
            </div>
            <div class="mb-3">
                <label for="thumbnail" class="form-label">Mensaje</label>
                <input type="text" id="texto" class="form-control" placeholder="texto" onkeyup="isEmpty()">
            </div>
            <button disabled type="submit" class="btn btn-primary" id="btn-submit">Enviar</button>
        </form>
    <h3>Mensajes</h3>
    <hr />
    <div class="container chat" id="chatContainer">
    </div>
</div>